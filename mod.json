{
	"geode": "4.2.0",
	"gd": {
		"win": "2.2074",
		"android": "2.2074",
		"mac": "2.2074"
	},
	"id": "johnny_cena.custom_jumpscare",
	"name": "Custom jumpscare",
	"version": "v0.2.1",
	"developer": "Johnny Cena",
	"description": "This mod totally won't jumpscare you.",
	
	"resources": {
		"sprites": ["Resources/*.png"]
	},
	
	"links": {
		"community": "https://discord.gg/x3VMjKatQj",
		"source": "https://github.com/JohnnyCena123/My-new-mod/"
	},

	"tags": [
		"joke"
	],

	"settings": {
		"EnableMod": {
			"name": "Enable mod",
			"type": "bool",
			"default": true
		},
		"EnableLogging":{
			"name": "Enable logging",
			"description": "Ignore this if you're not a developer",
			"type": "bool",
			"default": false,
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"Image": {
			"name": "Jumpscare image",
			"type": "file",
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled",
			"default": "johnny_cena.custom_jumpscare/jumpscare_image.png",
			"control": {
				"dialog": "open",
				"filters": [
					{
						"files": [ "*.png", "*.jpeg"],
						"description": "Image files"
					}
				]
			}
		},
		"FadeIn": {
			"name": "Fade-in time",
			"description": "Fade-in time for the image during jumpscares",
			"type": "float",
			"default": 0.05,
			"min": 0,
			"max": 0.25,
			"control": {
				"slider": true,
				"slider-step": 0.001,
				"arrows": true,
				"arrow-step": 0.01,
				"big-arrows": true,
				"big-arrow-step": 1,
				"input": true
			},
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"MaxOpacity": {
			"name": "Max opacity ",
			"description": "Max opacity for the image during jumpscares",
			"type": "float",
			"default": 1,
			"min": 0,
			"max": 1,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1,
				"big-arrows": true,
				"big-arrow-step": 1,
				"input": true
			},
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"FadeOut": {
			"name": "Fade-out time",
			"description": "Fade-out time for the image during jumpscares",
			"type": "float",
			"default": 0.5,
			"min": 0,
			"max": 2.5,
			"control": {
				"slider": true,
				"slider-step": 0.01,
				"arrows": true,
				"arrow-step": 0.1,
				"big-arrows": true,
				"big-arrow-step": 1,
				"input": true
			},
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"TestJumpscare": {
			"name": "Test jumpscare",
			"type": "custom:test-jumpscare",
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"OnDeath": {
			"type": "title",
			"name": "On death"
		},
		"EnableJumpscareOnDeath": {
			"name": "Enable",
			"type": "bool",
			"default": true,
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"ChanceOnDeath": {
			"name": "Chance",
			"description": "Set the chance that the jumpscare occurs on death.",
			"enable-if": "EnableJumpscareOnDeath && EnableMod",
			"type": "float",
			"default": 0,
			"min": 0,
			"max": 100,
			"control": {
				"slider": true,
				"slider-step": 0.1,
				"arrows": true,
				"arrow-step": 1,
				"big-arrows": true,
				"big-arrow-step": 5,
				"input": true
			}
		},
		"OnLevelExit": {
			"type": "title",
			"name": "On level exit"
		},
		"EnableJumpscareOnLevelExit": {
			"name": "Enable",
			"type": "bool",
			"default": true,
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"ChanceOnLevelExit": {
			"name": "Chance",
			"description": "Set the chance that the jumpscare occurs on level exit.",
			"enable-if": "EnableJumpscareOnLevelExit && EnableMod",
			"type": "float",
			"default": 0,
			"min": 0,
			"max": 100,
			"control": {
				"slider": true,
				"slider-step": 0.1,
				"arrows": true,
				"arrow-step": 1,
				"big-arrows": true,
				"big-arrow-step": 5,
				"input": true
			}
		},
		"OnSceneTransition": {
			"type": "title",
			"name": "On scene transition"
		},
		"EnableJumpscareOnSceneTransition": {
			"name": "Enable",
			"type": "bool",
			"default": true,
			"enable-if": "EnableMod",
			"enable-if-description": "The mod is disabled"
		},
		"ChanceOnSceneTransition": {
			"name": "Chance",
			"description": "Set the chance that the jumpscare occurs on scene transition.",
			"enable-if": "EnableJumpscareOnSceneTransition && EnableMod",
			"type": "float",
			"default": 0,
			"min": 0,
			"max": 100,
			"control": {
				"slider": true,
				"slider-step": 0.1,
				"arrows": true,
				"arrow-step": 1,
				"big-arrows": true,
				"big-arrow-step": 5,
				"input": true
			}
		}
	}
}
